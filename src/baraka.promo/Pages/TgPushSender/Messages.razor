    private async Task LoadData()
    {
        var selectitem = selectedItems?.Count > 0 ? selectedItems[0] : null;
        using var scope = _factoryService.CreateScope();
        var _db = scope.ServiceProvider.GetRequiredService<ApplicationDbContext>();

        var messages = _db.MessageHeaders.Where(w => !w.IsDeleted).Select(s => new MessageModel
        {
                Id = s.Id,
                Message = s.Message,
                CreateTime = s.CreatedTime,
                WorkingTimeFrom = s.WorkingTimeFrom,
                WorkingTimeTo = s.WorkingTimeTo,
                Status = s.Status,
                //SendedUserCount = gr.Count(w => w == Models.TgMessageModel.Status.Sended),
                //ErrorUserCount = gr.Count(w => w == Models.TgMessageModel.Status.Error),
                //NotSendedUserCount = gr.Count(w => w == Models.TgMessageModel.Status.New),
                StartDate = s.StartDate,
        }).ToList();

        var infos = _db.Messages.GroupBy(g => new { g.MessageHeaderId, g.Status }).Select(s => new
        {
            HeaderId = s.Key.MessageHeaderId,
            Status = s.Key.Status,
            Count = s.Count(),
            LastTime = s.Max(s=>s.SendTime)
        }).ToList();

        var times = _db.MessageTimes.GroupBy(a => a.MessageHeaderId).Select(s => new
        {
            MessageHeaderId = s.Key,
            StartTime = s.Max(a => a.StartTime),
            StopTime = s.Max(a => a.StopTime)
        }).ToList();

        //var query = (from x in messages
        //             join i in infos on x.Id equals i.HeaderId into ig
        //             from i in ig.DefaultIfEmpty()
        //             join t in times on x.Id equals t.MessageHeaderId into tg
        //             from t in tg.DefaultIfEmpty()
        //             select new MessageModel
        //                 {
        //                     Id = x.Id,
        //                     Message = x.Message,
        //                     CreateTime = x.CreateTime,
        //                     WorkingTimeFrom = x.WorkingTimeFrom,
        //                     WorkingTimeTo = x.WorkingTimeTo,
        //                     Status = x.Status,
        //                     SendedUserCount = i != null ? (i.Status == Models.TgMessageModel.Status.Sended ? i.Count : 0) : 0,
        //                     ErrorUserCount = i != null ? (i.Status == Models.TgMessageModel.Status.Error ? i.Count : 0) : 0,
        //                     NotSendedUserCount = i != null ? (i.Status == Models.TgMessageModel.Status.New ? i.Count : 0) : 0,
        //                     StartDate = x.StartDate,
        //                     StartTime = t != null ? t.StartTime : DateTime.MinValue,
        //                     StopTime = t != null ? t.StopTime : DateTime.MinValue

        //            }).ToList();


        foreach (var item in messages)
        {
            var time = times.FirstOrDefault(a => a.MessageHeaderId == item.Id);
            if (time != null)
            {
                item.StartTime = time.StartTime;
                item.StopTime = time.StopTime;
            }

            var statusItem = infos.FirstOrDefault(f => f.HeaderId == item.Id && f.Status == Models.TgMessageModel.Status.Sended);
            if(statusItem != null)
            {
                item.SendedUserCount = statusItem.Count;
                item.LastSuccessMessageSendTime = statusItem.LastTime;
            }

            statusItem = infos.FirstOrDefault(f => f.HeaderId == item.Id && f.Status == Models.TgMessageModel.Status.Error);
            if(statusItem != null)
            {
                item.ErrorUserCount = statusItem.Count;
                item.LastErrorMessageSendTime = statusItem.LastTime;
            }

            statusItem = infos.FirstOrDefault(f => f.HeaderId == item.Id && f.Status == Models.TgMessageModel.Status.New);
            if (statusItem != null)
                item.NotSendedUserCount = statusItem.Count;

        }

        if (archieve)
        {
            messageModels = messages.Where(a => a.Status == MessageHeaderStatus.Completed).OrderBy(a => a.CreateTime).ToList();
        }
        else{            
            messageModels = messages.Where(a => a.Status == MessageHeaderStatus.Start || a.Status == MessageHeaderStatus.Paused || a.Status == MessageHeaderStatus.New).OrderBy(a => a.CreateTime).ToList();
        }
        TotalCount = messageModels?.Count() ?? 0;
        if (selectitem != null)
        {
            selectedItems?.Add(selectitem);
            await InvokeAsync(() =>StateHasChanged());
        }
        await InvokeAsync(() =>StateHasChanged());

        _cache.SetCache("myDataKey", messageModels);


        if (!isDisposed)
        {
            await Task.Delay(10000);
            await Task.Run(LoadData);
        }
    }
    bool isDisposed = false;
