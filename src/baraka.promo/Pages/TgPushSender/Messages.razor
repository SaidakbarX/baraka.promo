    bool archieve;


    protected override async void OnInitialized()
    {
        var data = await _cache.GetFromCache<List<MessageModel>>("myDataKey");
        if (data != null)
        {
            TotalCount = data?.Count() ?? 0;
            messageModels = data;
            StateHasChanged();
        }
        else
        {
            await LoadData();
        }
