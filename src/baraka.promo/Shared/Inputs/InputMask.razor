@inject IJSRuntime JSRuntime
@inherits InputBase<string>
<RadzenTextBox Disabled="@Disabled" Style="@Style" Placeholder="@Placeholder" Name="@Name" id="@guid" @attributes="AdditionalAttributes" ReadOnly="ReadOnly" class="@CssClass" value="@CurrentValue"
               @oninput="EventCallback.Factory.CreateBinder<string>(this, __value => CurrentValueAsString = __value, CurrentValueAsString)"/>
@code {
    [Parameter]
    public bool ReadOnly { get; set; }
    [Parameter]
    public bool Disabled { get; set; }
    
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string Style { get; set; }
    
    [Parameter]
    public string Placeholder { get; set; }
    
    [Parameter]
    public string Mask
    {
        get => mask;
        set
        {
            if (mask != value)
            {
                mask = value;
                MaskChanged.InvokeAsync();

                if (!string.IsNullOrWhiteSpace(Mask))
                    JSRuntime.InvokeVoidAsync("mask", guid.ToString(), Mask, Uppercase);
            }
        }
    }
    [Parameter]
    public EventCallback<string> MaskChanged { get; set; }
    [Parameter]
    public bool Uppercase { get; set; }
    Guid guid { get; set; } = Guid.NewGuid();
    string mask;
    
    
    protected override void OnInitialized()
    {

    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !string.IsNullOrWhiteSpace(Mask))
        {
            await JSRuntime.InvokeVoidAsync("mask", guid.ToString(), Mask, Uppercase);
        }
    }

